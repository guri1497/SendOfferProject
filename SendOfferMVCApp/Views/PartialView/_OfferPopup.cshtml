@{ 
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<div class="card rounded-0" style="width:241px;border:1px solid seagreen;">
    <div class="card-header align-content-center bgSeagreen rounded-0">
        <h4 class="card-title text-center text-white">Your Offer</h4>
        <input type="number" style="height:55px;width:190px;border:none;" class="text-center mb-3" placeholder="$" value=""/>
    </div>
    <div class="card-body text-center">
        <i class="fa fa-plus-square-o text-success seagreen" aria-hidden="true" ></i> 
        <a href="#" class="txtSeagreen">Add Message to Seller</a>
        <p class="card-text text-center mt-3">By clicking Submit Offer, you are agreeing to and entering into a legally binding contract to purchase the item from the seller at your Offer Price.</p>
        <button class="btn btn-success bgSeagreen rounded-0 my-3">Submit Offer</button>
    </div>

</div>    

<style>
    .bgSeagreen {
        background-color: mediumseagreen;
    }
    .txtSeagreen{
        color:mediumseagreen;
    }
    
</style>
